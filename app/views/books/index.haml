%main.container
  %h1.general-title-margin Сatalog
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          Newest first
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        %ul.dropdown-menu
          %li
            = link_to t('books.filters.newest_first'), books_path(sort: 'created_by', direction: 'DESC', category: params[:category]), class: 'filter-link'
          %li
            = link_to t('books.filters.popular_first'), books_path(sort: 'created_by', direction: 'DESC', category: params[:category]), class: 'filter-link'
          %li
            = link_to t('books.filters.price_low_high'), books_path(sort: 'price', direction: 'ASC', category: params[:category]), class: 'filter-link'
          %li
            = link_to t('books.filters.price_high_low'), books_path(sort: 'price', direction: 'DESC', category: params[:category]), class: 'filter-link'
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        = link_to books_path(sort: 'created_by', direction: 'DESC', category: 'Mobile Development'), class: 'filter-link' do
          = t('nav.all')
          %span.badge.general-badge 135
      %li.mr-35
        = link_to books_path(sort: 'created_by', direction: 'DESC', category: 'Mobile Development'), class: 'filter-link' do
          = t('nav.mobile_development')
          %span.badge.general-badge 135
      %li.mr-35
        = link_to books_path(sort: 'created_by', direction: 'DESC', category: 'Photo'), class: 'filter-link' do
          = t('nav.photo')
          %span.badge.general-badge 135
      %li.mr-35
        = link_to books_path(sort: 'created_by', direction: 'DESC', category: 'Web design'), class: 'filter-link' do
          = t('nav.web_design')
          %span.badge.general-badge 135
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10 Filter by category
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          = link_to t('books.filters.newest_first'), books_path(sort: 'created_by', direction: 'DESC', category: params[:category])
        %li
          = link_to t('books.filters.popular_first'), books_path(sort: 'created_by', direction: 'DESC', category: params[:category])
        %li
          = link_to t('books.filters.price_low_high'), books_path(sort: 'price', direction: 'ASC', category: params[:category])
        %li
          = link_to t('books.filters.price_high_low'), books_path(sort: 'price', direction: 'DESC', category: params[:category])
    %p.lead.small.mb-10 Sort by
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          = link_to t('books.filters.newest_first'), books_path(sort: 'created_by', direction: 'DESC', category: params[:category])
        %li
          = link_to t('books.filters.popular_first'), books_path(sort: 'created_by', direction: 'DESC', category: params[:category])
        %li
          = link_to t('books.filters.price_low_high'), books_path(sort: 'price', direction: 'ASC', category: params[:category])
        %li
          = link_to t('books.filters.price_high_low'), books_path(sort: 'price', direction: 'DESC', category: params[:category])
  .mb-120{id:"container"}
    .row
    - @books.each do |book|
      .col-xs-6.col-sm-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            .thumb-hover
              .general-thumb-link-wrap
                %a.thumb-hover-link{href: "#"}
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                %a.thumb-hover-link{href: "#"}
                  %i.fa.fa-shopping-cart.thumb-icon
        .general-thumb-info
          %p.title= book.title
          %p.font-16.in-gold-500 €28.50
          %span.divider-sm
          %p.lead.small= book.authors.map(&:name).join(', ')
    .text-center
      = render partial: 'shared/nav_js'
      -#%button.btn.btn-primary View More
